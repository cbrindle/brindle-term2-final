<!DOCTYPE html>
<html lang="en">

<% include ../partials/head %>

<body>
    <% include ../partials/nav %>

    
    <div id="app">
        <% for (let err of errors) { %>
            <div class="alert alert-danger alert-dismissible fade show text-center mx-auto mt-5" style="width: 40%; height: 8vh;" role="alert">
                <%= err %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% } %>
        <div id="main">
            <div id="main-left">
                <img src="/images/party-group.jpg" width="75%">
            </div>
            <div id="main-right">
                <img src="/images/game-menu-text.png">
                <br>
                <br>
                <a href="/game/instructions">Read game play instructions</a>
                <br>
                <a href="" onclick="loadMessageBoard()">Post on message board</a>
                <br>
                <a href="/user/profile">Edit profile</a>
                <br>
                <br>
                <button onclick="launchGame()" class="btn btn-primary btn-lg">LAUNCH GAME</button>
            </div>
        </div>
    </div>


    <script>
    function launchGame() {
        window.open('/game/launch')
    }

    function loadMessageBoard() {
        window.open('http://tfs-forum.forumotion.com/')
    }
    </script>

    <link rel="stylesheet" href="/stylesheets/game-main.css">
    <link href="https://fonts.googleapis.com/css?family=Courgette&display=swap" rel="stylesheet">
</body>
</html>