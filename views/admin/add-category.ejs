<!DOCTYPE html>
<html lang="en">

<% include ../partials/head %>

<body>
    <% include ../partials/nav %>
    <br><br>

    <% for (let s of success) { %>
        <div class="alert alert-primary" role="alert">
            <%= s %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    <% } %>

    <% for (let err of errors) { %>
        <div class="alert alert-danger mx-auto" style="width:40%" role="alert">
            <%= err %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    
    <% } %>

    <div class="container">
    <form class="justify-content-center" method="POST" action="/admin/add-category">
        <div class="form-group">
            <label for="newCat">Category Name</label>
            <input type="text" style="width: 40%;" class="form-control" id="newCat" name="newCat" aria-describedby="newCat"
                placeholder="enter category">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" style="width: 40%;" class="form-control" id="description" name="description" aria-describedby="description"
                placeholder="description">
        </div>
        <button class="btn btn-lg btn-primary btn-block" style="width: 40%;" type="submit">Add</button>
    </form>
    <br>
    </div>

</body>
</html>